generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @unique @default(autoincrement())
  uid      String  @unique
  role     Role    @default(User)
  name     String
  email    String
  image    String  @default("https://dummyimage.com/400x400")
  provider String
}

enum Role {
  User
  Admin
}
